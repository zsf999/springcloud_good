define("//misc.360buyimg.com/channel/shouji/5.0.0/widget/firstscreen/firstscreen.js",[],function(require,a,b){a.init=function(a){a.imgWebp({useWebp:!1,Quality:95});var b=$(".p-category");seajs.use(["//misc.360buyimg.com/jdf/2.0.0/ui/tab/1.0.0/tab","//misc.360buyimg.com/channel/shouji/5.0.0/widget/common/nfa"],function(c,d){a.nfa(function(){if(window.channelData["floor-"+a.data("path")].nfa.length>0){var c=window.channelData["floor-"+a.data("path")].portal_id;var d=window.channelData["floor-"+a.data("path")].nfa[0].NAME;var e=window.nfaData["nfa-"+d];var f='<ul class="slider-mc">{for item in content}<li class="item ui-slider-item" style="background-color: ${item.ext1};"  clstag="channel|keycount|7167|slider_item_${item_index}"><div class="i-wrap"><div class="i-inner"><a target="_blank" href="${item.url}"  clstag="channel|keycount|'+c+"|nfa-"+d+'-${item_index}"><img data-lazy-webp="${item.picUrl}" width="980" height="510" alt="" /></a></div></div></li>{/for}</ul><div class="slider-extra"><ol class="slider-trigger">{for item in content}<li class="trigger-item"><span class="intext">${item.ext2}</span></li>{/for}</ol><div class="slider-btn"><a href="javascript:void(0)" class="prevBtn">&lt;</a><a href="javascript:void(0)" class="nextBtn">&gt;</a></div></div>';var g=a.find(".p-slider");g.html(f.process(e));var h=a.find(".c-layer .c-right");var i,j;for(var k=0;k<h.length;k++){i=window.channelData["floor-"+a.data("path")].nfa[k+1].NAME,j=window.nfaData["nfa-"+i];var f='{for item in content}<a href="${item.url}" target="_blank" clstag="channel|keycount|'+c+"|nfa-"+i+'-${item_index}"><img data-lazy-webp="${item.picUrl}" width="180" height="450"></a>{/for}';h.eq(k).html(f.process(j))}}$(".p-category .content .c-layer").eq(1).find(".c-left .items").eq(0).find(".item-cont a").css("width","70px"),b.delegate(".item","mouseenter",function(){var a=$(this).index();$(this).addClass("hover").siblings().removeClass("hover"),$(this).addClass("solidboder zeroboder"),$(this).prev().addClass("solidboder"),$(".c-layer").eq(a).imgWebp({useWebp:!1,Quality:"90"}),$(".c-layer").eq(a).addClass("curr").siblings().removeClass("curr")}),b.delegate(".item","mouseleave",function(){$(this).removeClass("solidboder zeroboder"),$(this).prev().removeClass("solidboder")}),b.bind("mouseleave",function(){var a=$(this);a.find(".title>.item").removeClass("hover"),a.find(".c-layer").removeClass("curr")});var l=$(".p-slider");var m=l.tab({navEl:".slider-extra .trigger-item",contentEl:".ui-slider-item",curCls:"cur",delay:200,isAutoPlay:!0,interval:5e3,effect:"flash",effectSpeed:400,onChange:function(a){a.contentEl.imgWebp({useWebp:!1,Quality:"90"})}});var n=$(".slider-btn").find(".prevBtn, .nextBtn");l.hover(function(){n.show()},function(){n.hide()}),l.find(".prevBtn").click(function(){m.prev()}),l.find(".nextBtn").click(function(){m.next()})})})}});